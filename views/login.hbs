<div id="form">
  <h2>Login</h2>
  <form action="/login" method="POST">

        <label> Username 
            <input type ="text" name ="username" placeholder="insert here">
        </label>

        <label> Password
            <input id ="password" type ="password" name ="password" placeholder="*****">
        </label>

    <button>Login</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>